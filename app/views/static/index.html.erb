<!-- Top band static content  -->

<div id="newfirstband">
  <div class="container" style="color:#555">
    <div class="row first" >
      <div class="col-xs-12 col-sm-4">
        <h2 class="text-right" style="margin: 50px auto 10px">Need a ride?</h2>
        <p class="text-right">Sit back and relax on your next trip </br>with our trusted community of drivers </br><%= link_to "See our beta rides", rides_path %></p> 
      </div>
      <div class="col-xs-12 col-sm-8" style="margin: 50px auto 10px">
        <div id="backseat"><img style="max-width: 100%;" src="https://www.pogoride.com/public/js/common/tiny_mce/plugins/imagemanager/files/road-trip-photo-2.png"></div>
      </div>
    </div>         
    <div class="row second" style="margin-bottom: 70px;">
      <div class="col-xs-12 col-sm-4 col-lg-3 col-lg-offset-1">
        <h2 class="text-right" style="margin: 20px auto 10px;">Driving?</h2>
        <p class="text-right">We want to help you meet amazing </br>people and get paid on your trips</br>
        <% if session[:user_id] %>
          <%= link_to "Post your ride", new_my_ride_path %>
        <% else %>
          <%= link_to "Post your ride", new_user_path %>
        <% end %>
        </p> 
      </div>
      <div class="col-xs-6 col-sm-2">
        <p class="text-center" style="margin: 60px auto 10px;">Make around </br>$30 per rider</p>
        <img style="display:block; margin: 0px auto" src="https://www.pogoride.com/public/js/common/tiny_mce/plugins/imagemanager/files/wallet-icon-2.png" width="50px">
      </div>
      <div class="col-xs-6 col-sm-2">
        <p class="text-center" style="margin: 60px auto 10px;">Connect with </br>trusted people</p>
        <img style="display:block; margin: 0px auto" src="https://www.pogoride.com/public/js/common/tiny_mce/plugins/imagemanager/files/people-icon-2.png" width="50px">
      </div>
      <div class="col-xs-6 col-sm-2">
        <p class="text-center" style="margin: 60px auto 10px;">Get goodies </br> on your trips</p>
        <img style="display:block; margin: 0px auto" src="https://www.pogoride.com/public/js/common/tiny_mce/plugins/imagemanager/files/coffee-icon-2.png" width="50px">
      </div>
      <div class="col-xs-6 col-sm-2">
        <p class="text-center" style="margin: 60px auto 10px;">See your travel </br>analytics</p>
        <img style="display:block; margin: 0px auto" src="https://www.pogoride.com/public/js/common/tiny_mce/plugins/imagemanager/files/analytics-icon-2.png" width="50px">
      </div>
    </div><!--second row close-->   
  </div><!--container close-->
</div><!--newfirstband close-->

