<div id="firstband firstbandback">
  <div class="container">
    <div class="row first" style="margin-bottom: 60px;">
      <h1 class="text-center">Requests</h1>
      <% @rides.reverse_each do |ride| %>
        <% if ride.driver_id != nil || ride.has_passengers?%>
          <%= render partial: "rides/ridecard", locals: {ride: ride, user: @user} %>
        <% end %> 
      <% end %>
    </div>
  </div>
</div>