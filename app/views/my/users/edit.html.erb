<!-- Form to edit profile details -->

<div class="ride-form">
  <h1>Edit Profile</h1>
  <%= form_for [:my, @user] , :html => { :multipart => true } do |f| %>
    <div>
      <%= f.label "email", "Email: " %>
      <%= f.text_field :email, class: 'form-group form-control input-medium' %>
    </div>
    <div>
      <%= f.label "username", "Desired Username: " %>
      <%= f.text_field :username, class: 'form-group form-control input-medium' %>
    </div>
    <div>
      <%= f.label "first_name", "First name: " %>
      <%= f.text_field :first_name, class: 'form-group form-control input-medium' %>
    </div>
    <div>
      <%= f.label "last_name", "Last name: " %>
      <%= f.text_field :last_name, class: 'form-group form-control input-medium' %>
    </div>
    <div>
      <%= f.label "about_me", "About me: " %>
      <%= f.text_area :about_me, class: 'form-control form-group description-input', :rows => "4"  %>
    </div>

    <!-- #change password to be moved -->
    <div>
      <%= f.label "password" %>
      <%= f.password_field "password", class: 'form-group form-control input-medium' %>
    </div>
    <div>
      <%= f.label "password_confirmation" %>
      <%= f.password_field "password_confirmation", class: 'form-group form-control input-medium' %>
    </div>

    <div>
      <%= f.file_field :avatar, class: 'form-group input-medium' %>
    </div>
    <div><%= f.submit "Save", class: 'btn btn-primary form-group' %></div>
  <% end %>
</div>
