<div class="signup-form">
  <h1>Sign Up</h1>

  <%= form_for @user do |f| %>
    <%= f.label "email", "Email: " %>
    <%= f.text_field :email, :class => 'form-control form-group input-medium' %>
    <%= f.label "username", "Desired Username: " %>
    <%= f.text_field :username, :class => 'form-control form-group input-medium' %>
    <%= f.label "password" %>
    <%= f.password_field "password", :class => 'form-control form-group input-medium' %>
    <%= f.label "password_confirmation" %>
    <%= f.password_field "password_confirmation", :class => 'form-control form-group input-medium'%>
    <%= f.submit "Create Account", :class => 'btn btn-primary'%>
  <% end %>

</div>

