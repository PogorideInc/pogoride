      <script>
        var modalContent = '';
        $(document).ready(function () {  
          mixpanel.track("Vote Clicked");
          $('.dropdown-toggle').dropdown(); 
          $('.modalvote').on('click', function(){
            mixpanel.track("Vote Opened");
            $('#err_msg').html('');
            if(modalContent != '')
              $('#modal_content').html(modalContent);
            $('#myVote').modal('toggle');
            
          });
          mixpanel.track("Page Opened");
          $('.dropdown-toggle').dropdown(); 
          $('.modallogin').on('click', function(){
            mixpanel.track("Signup Opened");
            $('#err_msg').html('');
            if(modalContent != '')
              $('#modal_content').html(modalContent);
            $('#myModal').modal('toggle');
            
          });
          $('.modalsignin').on('click', function(){
            mixpanel.track("Login opened");
            $('#err_msg').html('');
            if(modalContent != '')
              $('#modal_content').html(modalContent);
            $('#myModalSignIn').modal('toggle');
          });
          $('#requestLogin').live('click', function(){
            $('#myModalSignIn').modal('toggle');
          });
        }); 

      </script>
    </div><!--container close-->
  </header> 
